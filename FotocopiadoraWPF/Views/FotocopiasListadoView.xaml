<UserControl x:Class="FotocopiadoraWPF.Views.FotocopiasListadoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:FotocopiadoraWPF.ViewModels"
             xmlns:conv="clr-namespace:FotocopiadoraWPF.Converters">

    <UserControl.DataContext>
        <vm:FotocopiasListadoViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <conv:InicialNombreConverter x:Key="InicialNombreConverter"/>
        <conv:NombreAColorConverter x:Key="NombreAColorConverter"/>
        <!--<CollectionViewSource x:Key="FotocopiasView"
                          Source="{Binding Fotocopias}"
                          IsSourceGrouped="True"/>

        <conv:FechaSoloDiaConverter x:Key="FechaSoloDiaConverter"/>-->
    </UserControl.Resources>

    

    <Grid Margin="10">

        <ListView x:Name="ListaFotocopias" ItemsSource="{Binding FotocopiasView}"
          BorderThickness="0"
          Background="Transparent"
          HorizontalContentAlignment="Stretch"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <!-- Estilo del item -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,6"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <!-- HEADER POR FECHA -->
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name, StringFormat=dd/MM}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,16,0,6"
                               Foreground="#374151"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>

            <ListView.ItemTemplate>
                <DataTemplate>

                    <!-- CARD -->
                    <Border CornerRadius="12"
                    BorderBrush="#E6E8FF"
                    BorderThickness="1"
                    Padding="14"
                    Background="White">

                        <!-- Hover -->
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F7F8FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48"/>
                                <!-- Avatar -->
                                <ColumnDefinition Width="100"/>
                                <!-- Fecha -->
                                <ColumnDefinition Width="2*"/>
                                <!-- Nombre -->
                                <ColumnDefinition Width="*"/>
                                <!-- Total -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Estado -->
                                <ColumnDefinition Width="40"/>
                                <!-- Menú -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="#6B7280"
                               FontSize="12"
                               Text="{Binding Fecha, StringFormat=dd/MM/yyyy}"/>

                            <Border Grid.Column="1"
                                    Width="36"
                                    Height="36"
                                    CornerRadius="18"
                                    VerticalAlignment="Center"
                                    Background="{Binding Nombre,
                                                 Converter={StaticResource NombreAColorConverter}}">
                                
                                <TextBlock Text="{Binding Nombre,
                                                Converter={StaticResource InicialNombreConverter}}"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <!-- Fecha -->


                            <!-- Nombre -->
                            <TextBlock Grid.Column="2"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="#1F2937"
                               Text="{Binding Nombre}"/>

                            <!-- Total -->
                            <TextBlock Grid.Column="3"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#1F2A8A"
                               Text="{Binding PrecioTotal, StringFormat=$ {0:N0}}"/>

                            <!-- Estado -->
                            <TextBlock Grid.Column="4"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Text="{Binding Estado}">

                        <!-- Color según estado -->
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#10B981"/>
                                        <!-- verde -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Estado}" Value="ANULADO">
                                                <Setter Property="Foreground" Value="#EF4444"/>
                                                <!-- rojo -->
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Estado}" Value="PENDIENTE">
                                                <Setter Property="Foreground" Value="#F59E0B"/>
                                                <!-- amarillo -->
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>

                            </TextBlock>
                            <Button Grid.Column="5"
                                    Content="⋮"
                                    FontSize="18"
                                    Width="32"
                                    Height="32"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#5A6CFF"
                                    Cursor="Hand"
                                    Click="AbrirMenu"
                                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListView}}">

                                

                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Editar"
                  Command="{Binding PlacementTarget.Tag.EditarCommand,
                                    RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                  CommandParameter="{Binding PlacementTarget.DataContext,
                                            RelativeSource={RelativeSource AncestorType=ContextMenu}}" />

                                        <MenuItem Header="Eliminar"
                  Foreground="#EF4444"
                  Command="{Binding PlacementTarget.Tag.EliminarCommand,
                                    RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                  CommandParameter="{Binding PlacementTarget.DataContext,
                                            RelativeSource={RelativeSource AncestorType=ContextMenu}}" />


                                    </ContextMenu>
                                </Button.ContextMenu>

                            </Button>

                        </Grid>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



    </Grid>
</UserControl>
