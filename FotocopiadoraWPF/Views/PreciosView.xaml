<UserControl x:Class="Views.PreciosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:inputLayout="clr-namespace:Syncfusion.UI.Xaml.TextInputLayout;assembly=Syncfusion.SfTextInputLayout.WPF"

             xmlns:vm="clr-namespace:FotocopiadoraWPF.ViewModels"
             xmlns:conv="clr-namespace:FotocopiadoraWPF.Converters"

             mc:Ignorable="d" 
             Background="#F2F4F7">


    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style TargetType="{x:Type inputLayout:SfTextInputLayout}">
            <Setter Property="Margin" Value="10,0,10,10"/>
        </Style>

    </UserControl.Resources>


    <Grid RenderTransformOrigin="0.372,0.297" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="16"
               Background="White"
               Padding="20"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <Grid Width="350" Cursor="IBeam">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Precios" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" />

                <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="0"  Hint="Anillado" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox IsEnabled="{Binding InputsHabilitados}" Height="15" ValueValidation="OnKeyPress" Value="{Binding Anillado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  UseNullOption="True" FontSize="14" />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="1"  Hint="Empleado" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox IsEnabled="{Binding InputsHabilitados}" Height="15" ValueValidation="OnKeyPress" UseNullOption="True" FontSize="14" Value="{Binding Empleado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="2" Grid.Column="0"  Hint="1 - 100" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox IsEnabled="{Binding InputsHabilitados}" Height="15" ValueValidation="OnKeyPress" UseNullOption="True" FontSize="14" Value="{Binding Precio1a100, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="2" Grid.Column="1"  Hint="101 - 400" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox IsEnabled="{Binding InputsHabilitados}" Height="15" ValueValidation="OnKeyPress" UseNullOption="True" FontSize="14" Value="{Binding Precio101a400, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="3" Grid.Column="0"  Hint="401 - 700" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox IsEnabled="{Binding InputsHabilitados}" Height="15" ValueValidation="OnKeyPress" UseNullOption="True" FontSize="14" Value="{Binding Precio401a700, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"    />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="3" Grid.Column="1"  Hint="+700" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox IsEnabled="{Binding InputsHabilitados}" Height="15" ValueValidation="OnKeyPress" UseNullOption="True" FontSize="14" Value="{Binding PrecioMas700, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"    />
                </inputLayout:SfTextInputLayout>
            </Grid>
        </Border>
        <Button Grid.Row="1" 
                Grid.Column="0" 
                Content="{Binding TextoBotonPrincipal}"
                Command="{Binding BotonPrincipalCommand}"
                Width="120"
                Height="35"
                Margin="0,20,0,0"/>
        <Button Content="Cancelar" 
                Grid.Row="1" 
                Grid.Column="1"
                Command="{Binding CancelarCommand}"
                Width="120" 
                Height="35"
                Margin="0,20,0,0"
                Visibility="{Binding MostrarCancelar,
                Converter={StaticResource BoolToVisibility}}"/>
    </Grid>
    
</UserControl>
