<UserControl x:Class="Views.BalanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:FotocopiadoraWPF.Converters"
             xmlns:vm="clr-namespace:FotocopiadoraWPF.ViewModels"

             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:inputLayout="clr-namespace:Syncfusion.UI.Xaml.TextInputLayout;assembly=Syncfusion.SfTextInputLayout.WPF"
             mc:Ignorable="d" 
             Background="#F2F4F7">
    
    <UserControl.Resources>
        <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style TargetType="inputLayout:SfTextInputLayout">
            <Setter Property="Margin" Value="10,0,10,10"/>
        </Style>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:BalanceViewModel/>
    </UserControl.DataContext>

    <Grid RenderTransformOrigin="0.372,0.297" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border CornerRadius="16" Grid.ColumnSpan="2"
           Background="White"
           Padding="20,20,20,10"
           HorizontalAlignment="Center"
           VerticalAlignment="Center">
            <Grid RenderTransformOrigin="0.372,0.297" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!--Titulo-->
                    <RowDefinition Height="Auto"/>
                    <!--Contadores-->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!--Caja-->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!--Botones-->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Contadores" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" />

                <Label Grid.Row="1" Content="Toshiba Studio (307) Equipo 1" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Left" />

                <inputLayout:SfTextInputLayout Grid.Row="2" Grid.Column="0"  Hint="Inicio" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox Height="15" ValueValidation="OnKeyPress" UseNullOption="True" FontSize="14" Value="{Binding ContadorEquipo1Inicio}" IsEnabled="False" />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="2" Grid.Column="1"  Hint="Final" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox Height="15" ValueValidation="OnKeyPress" UseNullOption="True" FontSize="14" Value="{Binding ContadorEquipo1Final, Mode=TwoWay}" IsEnabled="{Binding InputsHabilitados}"/>

                </inputLayout:SfTextInputLayout>

                <Label Grid.Row="3" Content="Toshiba Studio (307) Equipo 2" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Left" />

                <inputLayout:SfTextInputLayout Grid.Row="4" Grid.Column="0"  Hint="Inicio" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox Height="15" ValueValidation="OnKeyPress" UseNullOption="True" FontSize="14" Value="{Binding ContadorEquipo2Inicio}"  IsEnabled="False"/>
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="4" Grid.Column="1"  Hint="Final" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox Height="15" ValueValidation="OnKeyPress" UseNullOption="True" FontSize="14" Value="{Binding ContadorEquipo2Final, Mode=TwoWay}" IsEnabled="{Binding InputsHabilitados}"/>
                    
                </inputLayout:SfTextInputLayout>

                <Label Grid.Row="5" Content="Caja" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" />

                <Label Grid.Row="6" Content="Efectivo" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Left" />

                <inputLayout:SfTextInputLayout Grid.Row="7" Grid.Column="0"  Hint="Inicio" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:CurrencyTextBox CurrencySymbol="$" Value="{Binding EfectivoInicio}"  IsEnabled="False" />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="7" Grid.Column="1"  Hint="Final" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:CurrencyTextBox CurrencySymbol="$" Value="{Binding EfectivoFinal, Mode=TwoWay}" IsEnabled="{Binding InputsHabilitados}"/>
                    
                </inputLayout:SfTextInputLayout>

                <Label Grid.Row="8" Content="Transferencia" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Left" />


                <inputLayout:SfTextInputLayout Grid.Row="9" Grid.Column="0"  Hint="Inicio" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:CurrencyTextBox CurrencySymbol="$" Value="{Binding TransferenciaInicio}"  IsEnabled="False" />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="9" Grid.Column="1"  Hint="Final" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:CurrencyTextBox CurrencySymbol="$" Value="{Binding TransferenciaFinal, Mode=TwoWay}" IsEnabled="{Binding InputsHabilitados}"/>
                   
                </inputLayout:SfTextInputLayout>
            </Grid>

        </Border>

        <Button Grid.Row="1" Grid.Column="0" Content="{Binding TextoBotonPrincipal}"
        Command="{Binding BotonPrincipalCommand}"
        Width="120"
        Height="35"
                 Margin="0,20,0,0"/>
        <Button Content="Cancelar" Grid.Row="1" Grid.Column="1"
        Width="120"
        Height="35"
        Margin="0,20,0,0"
        Command="{Binding CancelarCommand}"
        Visibility="{Binding MostrarCancelar,
                     Converter={StaticResource BoolToVisibilityConverter}}"/>

        <Border 
            Grid.Column="2"
            CornerRadius="16"
            Background="White"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="top">
            <StackPanel Width="200" Cursor="IBeam">
                <Label Grid.Row="0" Height="40" Content="Detalle" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" BorderBrush="{x:Null}" />

                <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="0"  Hint="Año" HelperText="{Binding HelperPrecioPagina}" ContainerType="Outlined" VerticalAlignment="Center" Foreground="Black" BorderBrush="Black">
                    <syncfusion:IntegerTextBox Height="15" ValueValidation="OnKeyPress" UseNullOption="True" FontSize="14" IsEnabled="False" Value="2026" GroupSeperatorEnabled="False" />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="2" Grid.Column="0"  Hint="Mes" HelperText="" ContainerType="Outlined" VerticalAlignment="Center" Foreground="Black" BorderBrush="Black">
                    <ComboBox SelectedValue="{Binding MesSeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="14">
                        <ComboBoxItem Content="Enero" Tag="1"/>
                        <ComboBoxItem Content="Febrero" Tag="2"/>
                        <ComboBoxItem Content="Marzo" Tag="3"/>
                        <ComboBoxItem Content="Abril" Tag="4"/>
                        <ComboBoxItem Content="Mayo" Tag="5"/>
                        <ComboBoxItem Content="Junio" Tag="6"/>
                        <ComboBoxItem Content="Julio" Tag="7"/>
                        <ComboBoxItem Content="Agosto" Tag="8"/>
                        <ComboBoxItem Content="Septiembre" Tag="9"/>
                        <ComboBoxItem Content="Octubre" Tag="10"/>
                        <ComboBoxItem Content="Noviembre" Tag="11"/>
                        <ComboBoxItem Content="Diciembre" Tag="12"/>
                    </ComboBox>
                </inputLayout:SfTextInputLayout>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
