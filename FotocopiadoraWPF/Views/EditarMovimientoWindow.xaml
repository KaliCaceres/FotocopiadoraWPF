<Window x:Class="EditarMovimientoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FotocopiadoraWPF"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:inputLayout="clr-namespace:Syncfusion.UI.Xaml.TextInputLayout;assembly=Syncfusion.SfTextInputLayout.WPF"
        mc:Ignorable="d"
        Title="EditarMovimientoWindow" Height="450" Width="800">
    <!--<StackPanel Margin="20">

        <TextBlock Text="Motivo"/>
        <TextBox  Margin="0,0,0,10"/>

        <TextBlock Text="Monto"/>
        <TextBox Text="{Binding Monto}" Margin="0,0,0,10"/>

        <TextBlock Text="Método"/>
        <ComboBox ItemsSource="{Binding Metodos}"
                  SelectedItem="{Binding MetodoPago}"
                  Margin="0,0,0,10"/>

        <Button Content="Guardar"
                Height="30"
                Click="Guardar_Click"/>

    </StackPanel>-->
    <StackPanel Margin="12" Width="auto" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border 
           CornerRadius="16" 
           Background="White"
           Padding="20,20,20,10"
           HorizontalAlignment="Center"
           VerticalAlignment="Center">
            <Grid RenderTransformOrigin="0.372,0.297" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!--Titulo-->
                    <RowDefinition Height="Auto"/>
                    <!--Contadores-->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!--Caja-->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!--Botones-->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Movimientos" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" />

                <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="0"  Hint="Empleado" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <ComboBox FontSize="14"
                                ItemsSource="{Binding Empleados}"
                                SelectedValue="{Binding Movimiento.Empleado, Mode=TwoWay}"
                                SelectedValuePath="." >

                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Style.Triggers>
                                    <!-- Deshabilita "Seleccionar" -->
                                    <DataTrigger Binding="{Binding}" Value="Seleccionar">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>

                    </ComboBox>
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="1"  Hint="Fecha" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:DateTimeEdit IsButtonPopUpEnabled="False" Height="13" FontSize="14" MinHeight="15" DateTime="{Binding Movimiento.Fecha, Mode=TwoWay}" />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="2" Grid.Column="0"  Hint="Tipo" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <ComboBox FontSize="14"
                        
                            ItemsSource="{Binding Tipos}"
                            SelectedValue="{Binding Movimiento.Tipo, Mode=TwoWay}"
                            SelectedValuePath=".">

                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Style.Triggers>
                                    <!-- Deshabilita "Seleccionar" -->
                                    <DataTrigger Binding="{Binding}" Value="Seleccionar">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>

                    </ComboBox>

                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="2" Grid.Column="1"  Hint="Metodo" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">

                    <ComboBox FontSize="14"
                            ItemsSource="{Binding MetodosPago}"
                            SelectedValue="{Binding Movimiento.MetodoPago, Mode=TwoWay}"
                            SelectedValuePath="." >

                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Style.Triggers>
                                    <!-- Deshabilita "Seleccionar" -->
                                    <DataTrigger Binding="{Binding}" Value="Seleccionar">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>

                    </ComboBox>
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="3" Grid.Column="0"  Hint="Monto" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:CurrencyTextBox CurrencySymbol="$" Value="{Binding Movimiento.Monto, Mode=TwoWay}"/>
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="3" Grid.Column="1"  Hint="Motivo" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <TextBox Height="15" FontSize="14" MinHeight="15" Text="{Binding Movimiento.Motivo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </inputLayout:SfTextInputLayout>
            </Grid>
        </Border>
        <Button 
                Content="Guardar"
                Width="120"
                Height="35"
                HorizontalAlignment="Left" 
                Margin="20,20,0,0"
                Command="{Binding GuardarCommand}"
            />

    </StackPanel>
</Window>
