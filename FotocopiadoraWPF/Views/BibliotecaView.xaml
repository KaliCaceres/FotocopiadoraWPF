<UserControl x:Class="BibliotecaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FotocopiadoraWPF"
             xmlns:vm="clr-namespace:FotocopiadoraWPF.ViewModels"
            
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:inputLayout="clr-namespace:Syncfusion.UI.Xaml.TextInputLayout;assembly=Syncfusion.SfTextInputLayout.WPF">

    <UserControl.Resources>

        <Style TargetType="{x:Type inputLayout:SfTextInputLayout}">
            <Setter Property="Margin" Value="10,0,10,10"/>
        </Style>

    </UserControl.Resources>

    <StackPanel Margin="12" Width="auto" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border 
           CornerRadius="16" 
           Background="White"
           Padding="20,20,20,10"
           HorizontalAlignment="Center"
           VerticalAlignment="Center">
            <Grid RenderTransformOrigin="0.372,0.297" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!--Titulo-->
                    <RowDefinition Height="Auto"/>
                    <!--Contadores-->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!--Caja-->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!--Botones-->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Libros" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" />

                <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="0"  Hint="Identificador" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <syncfusion:IntegerTextBox x:Name="TxtPaginas" Height="15" UseNullOption="True" FontSize="14" Value="{Binding Paginas,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" NullValue="0" MinValue="0" MaxValue="5000" ValueValidation="OnKeyPress"/>
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="1" Grid.Column="1"  Hint="Editorial" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <TextBox Height="15" FontSize="14" MinHeight="15" Text="{Binding Comentario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </inputLayout:SfTextInputLayout>

                <inputLayout:SfTextInputLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"  Hint="Nombre" HelperText="" ContainerType="Outlined" VerticalAlignment="Center">
                    <TextBox Height="15" FontSize="14" MinHeight="15" Text="{Binding Comentario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </inputLayout:SfTextInputLayout>
            </Grid>
        </Border>
        <Button 
            Content="Guardar"
            Command="{Binding GuardarCommand}"
            Width="120"
            Height="35"
            HorizontalAlignment="Left" 
            Margin="20,20,0,0"/>

    </StackPanel>

</UserControl>
